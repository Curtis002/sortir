{% extends 'base.html.twig' %}

{% block title %} Campus {% endblock %}

{% block body %}
    <h1 class="text-center mt-3 mb-5">Campus</h1>
    <div class="container">
        <div>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Nom du campus</th>
                    <th scope="col">action</th>
                </tr>
                </thead>
                <tbody>
                {% for campus in allCampus %}
                    <tr>
                        <td>{{ campus.nom }}</td>
                        <td><a href="{{ path('campus_update', {"id" : campus.id}) }}">Modifier</a> | <a href="{{ path('campus_delete', {"id" : campus.id}) }}" onclick="return confirm('Supprimer?')">Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <hr>
    </div>
    <div class="container">
        <h3 class="h3">Ajouter un nouveau campus:</h3>
            {{ form_start(campForm) }}
            {{ form_widget(campForm) }}
        <div>
            <button type="submit" class="btn btn-info">Cr√©er</button>
            {{ form_end(campForm) }}
        </div>
    </div>
{% endblock %}
