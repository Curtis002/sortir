{% extends 'base.html.twig' %}

{% block title %} Villes {% endblock %}

{% block body %}
<h1 class="text-center mt-3 mb-5">Villes</h1>
    <div class="container">
        <div>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Nom de la Ville</th>
                    <th scope="col">Code postal</th>
                    <th scope="col">action</th>
                </tr>
                </thead>
                <tbody>
                {% for ville in cities %}
                    <tr>
                        <td>{{ ville.nom }}</td>
                        <td>{{ ville.codePostal }} </td>
                        <td><a href="">Modifier</a> | <a href="">Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <hr>
    </div>
    <div class="container">
        <h3 class="h3">Ajouter une nouvelle ville :</h3>
        {{ form_start(cityForm) }}
        {{ form_widget(cityForm) }}


        <div>
            <button type="submit" class="btn btn-info">Cr√©er</button>
            {{ form_end(cityForm) }}
        </div>
    </div>
{% endblock %}
