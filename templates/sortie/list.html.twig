{% extends 'base.html.twig' %}

{% block title %}  Sorties {% endblock %}

{% block body %}
    <div class="container">
        <div>
            {% include 'sortie/filter.html.twig' %}
        </div>
        <div>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th scope="col">Cl√¥ture</th>
                    <th scope="col">Inscrits / Places</th>
                    <th scope="col">Etat</th>
                    <th scope="col">Inscrit</th>
                    <th scope="col">Organisateur</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                {% for sortie in sorties %}
                    <tbody>
                    <tr>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateHeureDebut|format_datetime('short', 'none', locale='fr') }}</td>
                        <td>{{ sortie.dateLimiteInscription|format_datetime('short', 'none', locale='fr') }}</td>
                        <td>{{ sortie.participants|length }} / {{ sortie.nbInscriptionsMax }}</td>
                        {# <td>{{ sortie.etatSortie.libelle }}</td> #}
                        <td>TODO</td>
                        {# <td>{{ sortie.organisateur.pseudo }}</td> #}
                        <td><a href="{{ path('sortie_detail', {'id': sortie.id}) }}">Afficher</a></td>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}