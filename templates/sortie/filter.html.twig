{% block body %}
    <div class="container-fluid mt-5">
        {{ form_start(sortiesForm) }}
        <div class="row">
            <div class="col-md-6">
                <h5>Filtrer les sorties</h5>
                <div class="row">
                    <div class="col-auto">
                        <label class="col-form-label">Le nom de la sortie contient</label>
                    </div>
                    <div class="col-auto">
                        {{ form_row(sortiesForm.q) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <label class="col-form-label">Campus</label>
                    </div>
                    <div class="col-auto">
                        {{ form_row(sortiesForm.campus) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-1">
                        <label class="col-form-label">Entre</label>
                    </div>
                    <div class="col-5">
                        {{ form_row(sortiesForm.dateDebut) }}
                    </div>
                    <div class="col-5">
                        {{ form_row(sortiesForm.dateFin) }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex flex-column align-content-center">
                {{ form_row(sortiesForm.organisateur) }}
                {{ form_row(sortiesForm.inscrit) }}
                {{ form_row(sortiesForm.notInscrit) }}
                {{ form_row(sortiesForm.terminees) }}
                </div>
            </div>
            <div class="col-md-2">
                <div class="d-flex flex-column align-content-center">
                    <button type="submit" class="btn btn-info p-3 mb-3">Rechercher</button>

                    <a href="{{ path('sortie_list') }}" class="btn btn-secondary btn-sm">RÃ©initialiser les filtres</a>
                </div>
            </div>
        </div>

        {{ form_end(sortiesForm) }}
    </div>
{% endblock %}
